7.2 Component Specifications
7.2.1 Polysemy Detector
class PolysemyDetector:
    """
    Detects words/phrases with multiple possible meanings
    that could lead to action ambiguity.
    """
    
    def __init__(self, polysemy_db_path: str):
        self.polysemy_db = self._load_database(polysemy_db_path)
        self.domain_embeddings = self._load_domain_embeddings()
        
    def detect(self, text: str, context: ConversationContext) -> PolysemyReport:
        """
        Analyze text for polysemous terms.
        
        Returns:
            PolysemyReport containing:
                - detected_terms: List of ambiguous words/phrases
                - possible_meanings: Dict mapping terms to meaning sets
                - domain_conflicts: List of cross-domain collision risks
                - severity_range: Tuple of (min_severity, max_severity)
                - confidence_scores: Dict of confidence per interpretation
        """
        tokens = self._tokenize(text)
        detected = []
        
        for token in tokens:
            if token.lower() in self.polysemy_db:
                meanings = self.polysemy_db[token.lower()]
                domain_scores = self._score_domains(token, context)
                detected.append(PolysemyMatch(
                    term=token,
                    meanings=meanings,
                    domain_scores=domain_scores,
                    context_probability=self._compute_context_prob(meanings, context)
                ))
        
        # Check for multi-word phrases
        phrases = self._extract_phrases(text)
        for phrase in phrases:
            if phrase in self.polysemy_db:
                detected.append(self._analyze_phrase(phrase, context))
        
        return self._compile_report(detected, context)
    
    def _score_domains(self, token: str, context: ConversationContext) -> Dict[str, float]:
        """Score likelihood of each domain interpretation."""
        domain_scores = {}
        token_embedding = self._embed(token)
        
        for domain, domain_embedding in self.domain_embeddings.items():
            # Compute similarity with context-weighted domain embedding
            context_weight = context.get_domain_weight(domain)
            similarity = cosine_similarity(token_embedding, domain_embedding)
            domain_scores[domain] = similarity * context_weight
            
        return self._normalize(domain_scores)
7.2.2 Intent Classifier
class IntentClassifier:
    """
    Classifies the intended action type from natural language.
    Uses multi-label classification for ambiguous cases.
    """
    
    INTENT_TAXONOMY = {
        'information_query': {'severity': 0, 'reversible': True},
        'create_content': {'severity': 1, 'reversible': True},
        'modify_data': {'severity': 2, 'reversible': True},
        'delete_data': {'severity': 3, 'reversible': False},
        'send_communication': {'severity': 3, 'reversible': False},
        'financial_transaction': {'severity': 4, 'reversible': False},
        'access_control': {'severity': 4, 'reversible': True},
        'execute_code': {'severity': 4, 'reversible': False},
        'system_control': {'severity': 5, 'reversible': True},
        'physical_action': {'severity': 6, 'reversible': False},
        'harm_potential': {'severity': 7, 'reversible': False},
    }
    
    def classify(self, text: str, context: ConversationContext) -> IntentDistribution:
        """
        Produce probability distribution over intent categories.
        
        Returns:
            IntentDistribution with:
                - probabilities: Dict[intent_type, probability]
                - top_intent: Most likely intent
                - uncertainty: Entropy of distribution
                - severity_expectation: Expected severity
        """
        # Multi-label classification with calibrated probabilities
        features = self._extract_features(text, context)
        raw_logits = self.model(features)
        probabilities = self._calibrate(softmax(raw_logits))
        
        uncertainty = self._compute_entropy(probabilities)
        severity_expectation = sum(
            prob * self.INTENT_TAXONOMY[intent]['severity']
            for intent, prob in probabilities.items()
        )
        
        return IntentDistribution(
            probabilities=probabilities,
            top_intent=max(probabilities, key=probabilities.get),
            uncertainty=uncertainty,
            severity_expectation=severity_expectation,
            requires_disambiguation=uncertainty > UNCERTAINTY_THRESHOLD
        )
7.2.3 HAPCL Generator
class HAPCLGenerator:
    """
    Converts natural language interpretations to HAPCL statements.
    """
    
    def __init__(self, verb_mapping: Dict, operator_rules: Dict):
        self.verb_mapping = verb_mapping
        self.operator_rules = operator_rules
        self.constraint_generator = ConstraintGenerator()
        
    def generate_options(
        self, 
        text: str, 
        interpretations: List[Interpretation],
        context: ConversationContext
    ) -> List[HAPCLStatement]:
        """
        Generate HAPCL statements for each interpretation.
        
        Each interpretation gets translated to an unambiguous HAPCL statement
        with appropriate constraints based on severity.
        """
        hapcl_options = []
        
        for interp in interpretations:
            # Extract semantic components
            actor = self._identify_actor(interp, context)
            operation = self._map_operation(interp)
            outcome = self._define_outcome(interp)
            
            # Generate constraints based on severity
            constraints = self.constraint_generator.generate(
                severity=interp.severity,
                reversibility=interp.reversible,
                domain=interp.domain
            )
            
            hapcl = HAPCLStatement(
                actor=actor,
                operator=self._select_operator(operation),
                operation=operation,
                outcome=outcome,
                constraints=constraints,
                severity=interp.severity,
                original_interpretation=interp.description
            )
            
            hapcl_options.append(hapcl)
        
        # Sort by severity (safest first)
        return sorted(hapcl_options, key=lambda h: h.severity)
    
    def _select_operator(self, operation: Operation) -> str:
        """Map operation type to HAPCL operator."""
        operator_map = {
            OperationType.CREATE: '+',
            OperationType.DELETE: '-',
            OperationType.TRANSFER: '>>',
            OperationType.RECEIVE: '<<',
            OperationType.QUERY: '??',
            OperationType.FORCE: '!!',
            OperationType.MODIFY: '*',
        }
        return operator_map.get(operation.type, '+')
7.2.4 Decision Engine
class NexusDecisionEngine:
    """
    Core decision logic for the Nexus Protocol.
    Determines whether to proceed, pause for HAPCL, or hard stop.
    """
    
    # Thresholds
    CONFIDENCE_THRESHOLD = 0.90
    UNCERTAINTY_THRESHOLD = 0.10
    
    # Severity-based rules
    SEVERITY_RULES = {
        'S0-S2': {'action': 'PROCEED', 'min_confidence': 0.90},
        'S3-S4': {'action': 'HAPCL_LIGHT', 'min_confidence': 0.95},
        'S5': {'action': 'HAPCL_FULL', 'min_confidence': 0.99, 'delay': 5},
        'S6': {'action': 'HARD_STOP', 'min_confidence': 1.0},
        'S7': {'action': 'HARD_STOP_ALERT', 'min_confidence': 1.0},
    }
    
    def decide(self, analysis: FullAnalysis) -> Decision:
        """
        Make the core proceed/pause/stop decision.
        
        Input:
            analysis: Combined output from all analysis layers
            
        Output:
            Decision object containing:
                - action: PROCEED | HAPCL_LIGHT | HAPCL_FULL | HARD_STOP
                - hapcl_options: List of HAPCL statements (if applicable)
                - reasoning: Explanation for audit
                - constraints: Required constraints for execution
        """
        max_severity = analysis.max_severity
        confidence = analysis.top_interpretation_confidence
        uncertainty = analysis.uncertainty
        
        # Rule 1: Any S7 interpretation = immediate hard stop with alert
        if max_severity >= 7:
            return Decision(
                action=DecisionAction.HARD_STOP_ALERT,
                reasoning="Detected potential lethal harm interpretation",
                log_level=LogLevel.CRITICAL
            )
        
        # Rule 2: Any S6 interpretation = hard stop
        if max_severity >= 6:
            return Decision(
                action=DecisionAction.HARD_STOP,
                reasoning="Detected potential physical harm interpretation",
                log_level=LogLevel.WARNING
            )
        
        # Rule 3: High uncertainty regardless of severity = HAPCL
        if uncertainty > self.UNCERTAINTY_THRESHOLD:
            hapcl_options = self.hapcl_generator.generate_options(
                analysis.original_text,
                analysis.interpretations,
                analysis.context
            )
            return Decision(
                action=DecisionAction.HAPCL_FULL,
                hapcl_options=hapcl_options,
                reasoning=f"Uncertainty {uncertainty:.2%} exceeds threshold",
                log_level=LogLevel.INFO
            )
        
        # Rule 4: Severity-based with confidence check
        if max_severity >= 5:
            return self._hapcl_with_delay(analysis, delay_seconds=5)
        elif max_severity >= 3:
            return self._hapcl_light(analysis)
        else:
            # S0-S2 with high confidence
            if confidence >= self.CONFIDENCE_THRESHOLD:
                return Decision(
                    action=DecisionAction.PROCEED,
                    selected_interpretation=analysis.top_interpretation,
                    reasoning="High confidence, low severity",
                    log_level=LogLevel.DEBUG
                )
            else:
                return self._hapcl_light(analysis)
7.3 Integration Patterns
7.3.1 Middleware Integration
# Example: Integration with LangChain-style agent

from nexus_protocol import NexusInterceptor

class NexusAgentExecutor:
    """
    Agent executor with Nexus Protocol integration.
    """
    
    def __init__(self, llm, tools, nexus_config: NexusConfig):
        self.llm = llm
        self.tools = tools
        self.interceptor = NexusInterceptor(nexus_config)
        self.human_interface = HumanApprovalInterface()
        
    async def execute(self, user_input: str, context: Dict) -> AgentResult:
        """Execute agent with Nexus safety layer."""
        
        # Step 1: LLM generates proposed action
        proposed_action = await self.llm.generate_action(user_input, context)
        
        # Step 2: Nexus Interceptor analyzes
        nexus_decision = self.interceptor.analyze(
            original_input=user_input,
            proposed_action=proposed_action,
            context=context
        )
        
        # Step 3: Branch based on decision
        match nexus_decision.action:
            case DecisionAction.PROCEED:
                return await self._execute_action(proposed_action)
                
            case DecisionAction.HAPCL_LIGHT | DecisionAction.HAPCL_FULL:
                # Present options to human
                selected = await self.human_interface.present_hapcl(
                    nexus_decision.hapcl_options
                )
                if selected:
                    return await self._execute_hapcl(selected)
                else:
                    return AgentResult(status="cancelled_by_user")
                    
            case DecisionAction.HARD_STOP:
                return AgentResult(
                    status="blocked",
                    reason="Safety concern detected",
                    details=nexus_decision.reasoning
                )
                
            case DecisionAction.HARD_STOP_ALERT:
                await self._send_alert(nexus_decision)
                return AgentResult(
                    status="blocked_and_reported",
                    reason="Critical safety concern"
                )
